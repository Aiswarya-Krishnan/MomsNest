@model List<Category>
<div class="card shadow boarder-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 ">
                <h2 class="text-white text-center py-2"> Category  List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-12 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Category</a>
            </div>
        </div>


        <table class="table table-light mt-2 mb-3 table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Display Order</th>
            
        </tr>
    </thead>
   
    <tbody>
        @foreach(var obj in Model.OrderBy(e=>e.DisplayOrder)){
        <tr>
            
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
            <td>
                <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit </a>
                                <a href="#" onclick="Delete('@Url.Action("Delete", "Category", new { id = @obj.CategoryId })')" class="btn btn-outline-danger">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>

    @section Scripts {
        <script src="~/js/category.js"></script>
    }
