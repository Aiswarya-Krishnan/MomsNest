@model List<Product>

<div class="card shadow boarder-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 ">
                <h2 class="text-white text-center py-2"> Product  List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-12 text-end mb-3">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Product</a>
            </div>
        </div>
        <table id="tblData" class="table table-light mt-3 mb-3 table-striped table-hover table-bordered w-100">
            <thead>
                <tr>
                    <th scope="col">Product Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Price</th>
                    <th scope="col">Stock Quantity</th>
                    <th scope="col">Action</th>



                </tr>
            </thead>
            
            <tbody>
            @foreach(var obj in Model){
            <tr>
            <td>@obj.ProductName</td>
           
            <td>@obj.Category.Name</td>
            <td>@obj.Brand</td>
            <td>@obj.Price</td>
            <td>@obj.StockQuantity</td>


            <td>
            <div class="w-75 btn-group" role="group">
            <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.ProductId" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>  </a>
            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductId" class="btn btn-outline-danger"><i class="bi bi-trash3"></i> </a>

            </div>
            </td>
            </tr>
            }
            </tbody>
        </table>
    </div>

</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}