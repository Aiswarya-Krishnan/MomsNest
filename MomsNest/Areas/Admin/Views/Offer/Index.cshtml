@model List<Offer>

<div class="card shadow boarder-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 ">
                <h2 class="text-white text-center py-2"> Offer List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-12 text-end mb-2">
                <a asp-controller="Offer" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle "></i> Create New Offer</a>
            </div>
        </div>


        <table class="table table-light mt-2 mb-3 table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col">Offer Name</th>
                    <th scope="col">Offer Type</th>
                    <th scope="col">Offer Item</th>

                    <th scope="col">Discount Amount</th>
                    <th scope="col">Offer Description</th>

                   

                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>

                        <td>@obj.OfferName</td>
                        <td>@obj.Offertype</td>
                        <td>@obj.OfferItem</td>
                         <td>@obj.OfferDiscount</td>
                        <td>@obj.OfferDescription</td>
                        
                        
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Offer" asp-action="Edit" asp-route-id="@obj.OfferId" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit </a>
                                <a href="#" onclick="Delete('@Url.Action("Delete", "Offer", new { id = @obj.OfferId })')" class="btn btn-outline-danger">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @section Scripts {
        <script src="~/js/offer.js"></script>
    }
