@model List<Coupons>

<div class="card shadow boarder-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 ">
                <h2 class="text-white text-center py-2"> Coupon  List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-12 text-end">
                <a asp-controller="Coupon" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Coupon</a>
            </div>
        </div>


        <table class="table table-light mt-2 mb-3 table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col">Code</th>
                    <th scope="col">Type</th>
                    <th scope="col">Discount Amount</th>
                    <th scope="col">Discount Percentage</th>
                    <th scope="col">Minimum Amount</th>

                   

                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>

                        <td>@obj.Code</td>
                        <td>@obj.Type</td>
                        <td>@obj.DiscountAmount</td>
                        <td>@obj.DiscountPercentage</td>
                        <td>@obj.MinimumAmount</td>
                        
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Coupon" asp-action="Edit" asp-route-id="@obj.CID" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit </a>
                                <a href="#" onclick="deleteCoupon('@Url.Action("Delete", "Coupon", new { id = @obj.CID })')" class="btn btn-outline-danger">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>

</div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @section Scripts {
        <script src="~/js/coupon.js"></script>
    }
