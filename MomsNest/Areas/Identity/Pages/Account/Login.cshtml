@page
@model LoginModel
<div class="card shadow border-0 mb-5 mt-2 mx-auto" style="max-width: 50%;">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">LOG IN</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12">
                <section>
             <form id="account" method="post" class="row mx-5 justify-content-center">
              <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                  <div class="form-floating mb-3 col-md-10">
                      <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                      <label asp-for="Input.Email" class="ms-2 text-muted">Email</label>
                       <span asp-validation-for="Input.Email" class="text-danger"></span>
                   </div>
                    <div class="form-floating mb-3 col-md-10">
                       <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                       <label asp-for="Input.Password" class="ms-2 text-muted">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                     </div>
                        <div class="checkbox mb-2 col-md-10">
                            <label asp-for="Input.RememberMe" class="ms-2 text-muted">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div class="col-md-10">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                        <div class=" mb-2 col-md-10 mt-4">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    
                </div>
            </form>
        </section>
    </div>

